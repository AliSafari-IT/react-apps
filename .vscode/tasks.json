{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run API",
            "type": "shell",
            "command": "dotnet run",
            "options": {
                "cwd": "${workspaceFolder}/next-api"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "owner": "dotnet",
                "pattern": {
                    "regexp": "^.+$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Application started.*$",
                    "endsPattern": "^.*Application stopping.*$"
                }
            }
        },
        {
            "label": "Run Next App",
            "type": "shell",
            "command": "yarn dev",
            "options": {
                "cwd": "${workspaceFolder}/next-app"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "owner": "javascript",
                "pattern": {
                    "regexp": "^.+$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting development server.*$",
                    "endsPattern": "^.*Compiled successfully.*$"
                }
            }
        },
        {
            "label": "Run Both",
            "dependsOn": ["Run API", "Run Next App"],
            "dependsOrder": "parallel"
        }
    ]
}
