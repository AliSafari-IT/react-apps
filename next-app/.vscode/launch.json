{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\app\\layout.tsx",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": "yarn build and start",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bServer running at\\b.*\\b(http://\\S+:\\d+)\\b",
                "uriFormat": "%s"
            }
        }
    ]
}
